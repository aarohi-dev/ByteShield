<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.HomeController">
   <top>
      <VBox spacing="10.0">
         <children>
            <Label styleClass="app-title" text="ðŸ›¡ï¸ Cyber Hygiene Trainer" />
            <Label fx:id="welcomeLabel" styleClass="welcome-text" text="Welcome to Cyber Hygiene Trainer!" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true">
         <content>
            <VBox fx:id="mainContainer" spacing="20.0">
               <children>
                  <!-- User Input Section -->
                  <VBox spacing="10.0" styleClass="section-box">
                     <children>
                        <Label styleClass="section-title" text="Get Started" />
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Your Name:" />
                              <TextField fx:id="userNameField" promptText="Enter your name (optional)" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Quiz Selection Section -->
                  <VBox spacing="10.0" styleClass="section-box">
                     <children>
                        <Label styleClass="section-title" text="Start a Quiz" />
                        <HBox spacing="20.0">
                           <children>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Category:" />
                                    <ComboBox fx:id="categoryComboBox" onAction="#onCategoryChanged" prefWidth="200.0" />
                                 </children>
                              </VBox>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Difficulty:" />
                                    <ComboBox fx:id="difficultyComboBox" prefWidth="150.0" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <Button fx:id="startQuizButton" onAction="#onStartQuiz" styleClass="primary-button" text="Start Quiz" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Action Buttons Section -->
                  <HBox spacing="15.0" styleClass="section-box">
                     <children>
                        <Button fx:id="viewStatsButton" onAction="#onViewStats" styleClass="secondary-button" text="ðŸ“Š View Statistics" />
                        <Button fx:id="viewTipsButton" onAction="#onViewTips" styleClass="secondary-button" text="ðŸ’¡ Security Tips" />
                        <Button fx:id="phishingSimulationButton" onAction="#onPhishingSimulation" styleClass="secondary-button" text="ðŸŽ¯ Phishing Simulation" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </HBox>
                  
                  <!-- Statistics Section -->
                  <VBox fx:id="statsContainer" spacing="10.0" styleClass="section-box">
                     <children>
                        <Label styleClass="section-title" text="Your Progress" />
                        <HBox spacing="30.0">
                           <children>
                              <Label fx:id="totalQuizzesLabel" text="Total Quizzes: 0" />
                              <Label fx:id="averageScoreLabel" text="Average Score: 0%" />
                              <Label fx:id="currentStreakLabel" text="Current Streak: 0" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label styleClass="footer-text" text="ByteShield - Building Cybersecurity Awareness" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
