<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.QuizController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label fx:id="categoryLabel" styleClass="quiz-info" text="Category: " />
            <Label fx:id="difficultyLabel" styleClass="quiz-info" text="Difficulty: " />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox spacing="20.0">
         <children>
            <!-- Question Number -->
            <Label fx:id="questionNumberLabel" styleClass="question-number" text="Question 1 of 10" />
            
            <!-- Question Text -->
            <VBox spacing="15.0" styleClass="question-container">
               <children>
                  <Label fx:id="questionLabel" styleClass="question-text" text="Question text will appear here..." wrapText="true" />
                  
                  <!-- Answer Options -->
                  <VBox fx:id="optionsContainer" spacing="10.0" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="homeButton" onAction="#onHome" styleClass="secondary-button" text="🏠 Home" />
            <Button fx:id="previousButton" onAction="#onPrevious" styleClass="secondary-button" text="← Previous" />
            <Button fx:id="nextButton" onAction="#onNext" styleClass="primary-button" text="Next →" />
            <Button fx:id="submitButton" onAction="#onSubmit" styleClass="submit-button" text="Submit Quiz" visible="false" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
