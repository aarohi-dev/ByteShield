<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.ResultController">
   <top>
      <VBox spacing="10.0">
         <children>
            <Label styleClass="app-title" text="📊 Quiz Results" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true">
         <content>
            <VBox spacing="20.0">
               <children>
                  <!-- Quiz Results Section -->
                  <VBox spacing="15.0" styleClass="section-box">
                     <children>
                        <Label styleClass="section-title" text="Quiz Results" />
                        <HBox spacing="30.0">
                           <children>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label fx:id="scoreLabel" text="Score: 0/0" />
                                    <Label fx:id="percentageLabel" text="Percentage: 0%" />
                                    <Label fx:id="gradeLabel" text="Grade: F" />
                                 </children>
                              </VBox>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label fx:id="categoryLabel" text="Category: " />
                                    <Label fx:id="durationLabel" text="Duration: 0 minutes" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox spacing="15.0">
                           <children>
                              <Button fx:id="generateCertificateButton" onAction="#onGenerateCertificate" styleClass="secondary-button" text="📜 Generate Certificate" visible="false" />
                              <Button fx:id="generateReportButton" onAction="#onGenerateReport" styleClass="secondary-button" text="📄 Generate Report" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Incorrect Answers Section -->
                  <VBox fx:id="incorrectAnswersContainer" spacing="10.0" styleClass="section-box">
                     <children>
                        <Label styleClass="section-title" text="Review" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Statistics Section -->
                  <VBox fx:id="statsContainer" spacing="10.0" styleClass="section-box">
                     <children>
                        <Label styleClass="section-title" text="Your Overall Progress" />
                        <HBox spacing="30.0">
                           <children>
                              <Label fx:id="totalQuizzesLabel" text="Total Quizzes: 0" />
                              <Label fx:id="averageScoreLabel" text="Average Score: 0%" />
                              <Label fx:id="currentStreakLabel" text="Current Streak: 0" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="homeButton" onAction="#onHome" styleClass="secondary-button" text="🏠 Home" />
            <Button fx:id="newQuizButton" onAction="#onNewQuiz" styleClass="primary-button" text="🔄 New Quiz" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
