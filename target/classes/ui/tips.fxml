<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.TipsController">
   <top>
      <VBox spacing="10.0">
         <children>
            <Label styleClass="app-title" text="💡 Cybersecurity Tips" />
            <Label styleClass="subtitle" text="Essential knowledge to keep yourself safe online" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <ScrollPane fx:id="scrollPane" fitToWidth="true">
         <content>
            <VBox fx:id="tipsContainer" spacing="15.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="homeButton" onAction="#onHome" styleClass="secondary-button" text="🏠 Home" />
            <Button fx:id="phishingSimulationButton" onAction="#onPhishingSimulation" styleClass="primary-button" text="🎯 Try Phishing Simulation" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
